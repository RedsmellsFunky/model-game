<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>3D Character Runner</title>
    <style>
        body { margin: 0; overflow: hidden; background-color: #111; }
        #instructions {
            position: absolute;
            top: 10px;
            left: 10px;
            color: white;
            font-family: sans-serif;
            background: rgba(0,0,0,0.5);
            padding: 10px;
            pointer-events: none;
        }
    </style>
</head>
<body>
    <div id="instructions">Use WASD or Arrow Keys to Move</div>
    
    <script type="importmap">
        {
            "imports": {
                "three": "https://unpkg.com/three@0.160.0/build/three.module.js",
                "three/addons/": "https://unpkg.com/three@0.160.0/examples/jsm/"
            }
        }
    </script>

    <script type="module">
        import * as THREE from 'three';

        // --- SCENE SETUP ---
        const scene = new THREE.Scene();
        scene.background = new THREE.Color(0x87ceeb); // Sky blue
        scene.fog = new THREE.Fog(0x87ceeb, 10, 50);

        const camera = new THREE.PerspectiveCamera(75, window.innerWidth / window.innerHeight, 0.1, 1000);
        const renderer = new THREE.WebGLRenderer({ antialias: true });
        renderer.setSize(window.innerWidth, window.innerHeight);
        renderer.shadowMap.enabled = true;
        document.body.appendChild(renderer.domElement);

        // --- LIGHTING ---
        const hemiLight = new THREE.HemisphereLight(0xffffff, 0x444444, 1);
        scene.add(hemiLight);

        const dirLight = new THREE.DirectionalLight(0xffffff, 1);
        dirLight.position.set(5, 10, 5);
        dirLight.castShadow = true;
        scene.add(dirLight);

        // --- THE FLOOR ---
        const floorGeometry = new THREE.PlaneGeometry(100, 100);
        const floorMaterial = new THREE.MeshStandardMaterial({ color: 0x228b22 });
        const floor = new THREE.Mesh(floorGeometry, floorMaterial);
        floor.rotation.x = -Math.PI / 2;
        floor.receiveShadow = true;
        scene.add(floor);

        // --- THE PLAYER (A Placeholder Mannequin) ---
        // In a real game, you would use GLTFLoader to load a .glb file here
        const playerGroup = new THREE.Group();
        
        const bodyGeom = new THREE.CapsuleGeometry(0.4, 1, 4, 8);
        const bodyMat = new THREE.MeshStandardMaterial({ color: 0xff4444 });
        const body = new THREE.Mesh(bodyGeom, bodyMat);
        body.position.y = 0.9;
        body.castShadow = true;
        playerGroup.add(body);

        const headGeom = new THREE.SphereGeometry(0.25);
        const head = new THREE.Mesh(headGeom, bodyMat);
        head.position.y = 1.7;
        playerGroup.add(head);

        scene.add(playerGroup);

        // --- MOVEMENT LOGIC ---
        const keys = { w: false, a: false, s: false, d: false };
        const velocity = new THREE.Vector3();
        const speed = 0.1;

        window.addEventListener('keydown', (e) => { keys[e.key.toLowerCase()] = true; });
        window.addEventListener('keyup', (e) => { keys[e.key.toLowerCase()] = false; });

        camera.position.set(0, 5, 10);
        camera.lookAt(playerGroup.position);

        // --- ANIMATION LOOP ---
        function animate() {
            requestAnimationFrame(animate);

            // Movement handling
            if (keys.w || keys.ArrowUp) playerGroup.position.z -= speed;
            if (keys.s || keys.ArrowDown) playerGroup.position.z += speed;
            if (keys.a || keys.ArrowLeft) playerGroup.position.x -= speed;
            if (keys.d || keys.ArrowRight) playerGroup.position.x += speed;

            // Camera follow (Third Person)
            camera.position.lerp(new THREE.Vector3(
                playerGroup.position.x, 
                playerGroup.position.y + 4, 
                playerGroup.position.z + 8
            ), 0.1);
            camera.lookAt(playerGroup.position);

            renderer.render(scene, camera);
        }

        window.addEventListener('resize', () => {
            camera.aspect = window.innerWidth / window.innerHeight;
            camera.updateProjectionMatrix();
            renderer.setSize(window.innerWidth, window.innerHeight);
        });

        animate();
    </script>
</body>
</html>
